# ================================================
# Configuration Grafana Tempo pour Scalingo
# ================================================

server:
  # Scalingo ne permet d'exposer qu'un seul port externe : $PORT
  http_listen_port: <%= ENV["PORT"] || 8080 %>
  grpc_listen_port: <%= ENV["PORT"] || 8080 %>

distributor:
  receivers:
    otlp:
      protocols:
        grpc:
          # OTLP gRPC sur le port exposé
          endpoint: "0.0.0.0:<%= ENV["PORT"] || 8080 %>"
        http:
          # OTLP HTTP sur le même port (utilisé par Node.js)
          endpoint: "0.0.0.0:<%= ENV["PORT"] || 8080 %>"

ingester:
  max_block_duration: 1h
  max_block_bytes: 104857600
  complete_block_timeout: 5m

compactor:
  compaction:
    block_retention: 48h

storage:
  trace:
    backend: local
  wal:
    path: /tmp/tempo/wal
  local:
    path: /tmp/tempo/blocks
